{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "offline-edu-ai-agent",
  "version": "0.1.0",
  "identifier": "com.edu.offlineaiagent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "offline-edu-ai-agent",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
  "bin/llama-cli.exe",
  "bin/llama.dll",
  "bin/ggml.dll",
  "bin/ggml-cpu.dll",
  "bin/ggml-base.dll",
  "bin/mtmd.dll",
  "agent/models/*.gguf"
]
  }
}
